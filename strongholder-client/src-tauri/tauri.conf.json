{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Strongholder",
  "version": "1.0.0",
  "identifier": "com.strongholder.client",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://127.0.0.1:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Strongholder",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost https://flagcdn.com https://*.flagcdn.com; style-src 'self' 'unsafe-inline';connect-src 'self' https://strongholder.fr;"
    }
  },
  "plugins": {
    "fs": {},
    "notification": null,
    "dialog": null
  },
  "bundle": {
    "active": true,
    "resources": [
      "resources/scripts"
    ],
    "publisher": "Strongholder",
    "targets": [
      "nsis",
      "deb",
      "appimage"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "installMode": "perMachine",
        "installerIcon": "icons/icon.ico",
        "displayLanguageSelector": true,
        "languages": [
          "English",
          "French",
          "Spanish",
          "Italian",
          "German"
        ]
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "librsvg2-common",
          "cron",
          "pkexec",
          "dpkg"
        ]
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}